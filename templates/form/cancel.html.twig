{% extends 'form/modifica.html.twig' %}
{%- block submit_widget -%}
    <button type="{{ type|default('submit') }}" {{ block('button_attributes') }}
            style='float:left; margin-right:10px;>
        <i class='icofont icofont-plus'></i>
        {{ label|trans({}, translation_domain) }}
    </button>
    <button class='btn btn-secondary-gradien btn-lg'
            type='button' data-bs-dismiss='modal'
            data-bs-original-title='' title=''
            onclick="jQuery('#add').toggle(700)" style='float:left;margin-bottom:20px;'>
        <i class='icofont icofont-close'></i> Close
    </button>
{%- endblock submit_widget -%}

{% block date_time_picker_widget %}
    <div class="input-group date" data-toggle="datetimepicker">
        {{ block('datetime_widget') }}
        <span class="input-group-addon">
            <span class="fa fa-calendar" aria-hidden="true"></span>
        </span>
    </div>
{% endblock %}

{% block tags_input_widget %}
    <div class="input-group">
        {{ form_widget(form, {'attr': {'data-toggle': 'tagsinput', 'data-tags': tags|json_encode}}) }}
        <span class="input-group-addon">
            <span class="fa fa-tags" aria-hidden="true"></span>
        </span>
    </div>
{% endblock %}