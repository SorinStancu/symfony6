{% extends 'base.html.twig' %}

{% block body %}
    {#{{ dump() }}#}
<div class="col-sm-12">
    <div class="card">

    <div class="card-header"><h5>{{ pagina.name }}</h5></div>

    <div class="card-body">
        {% form_theme form 'form/modifica.html.twig' %}
        {{ form_start(form) }}
        {{ form_widget(form) }}
        {{ form_end(form) }}
    </div>
 </div></div>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('assets/js/notify/bootstrap-notify.min.js') }}"></script>
    {% if app.session.flashBag.has('succes') %}
        <script src="{{ asset('assets/js/notify/index_succes.js') }}"></script>
    {% elseif app.session.flashBag.has('error') %}
        <script src="{{ asset('assets/js/notify/index.js') }}"></script>
    {% endif %}

    <script src="{{ asset('assets/js/editor/ckeditor/ckeditor.js') }}"></script>
    <script src="{{ asset('assets/js/editor/ckeditor/adapters/jquery.js') }}"></script>
    <script src="{{ asset('assets/js/editor/ckeditor/styles.js') }}"></script>
    <script src="{{ asset('assets/js/editor/ckeditor/ckeditor.custom.js') }}"></script>

{% endblock %}